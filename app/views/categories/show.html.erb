<h1><%= @category.name %></h1>
<%= link_to "Create a New Category", new_category_path, class: "btn btn-primary" %>
<%= link_to "Create a New Recipe", new_category_bookmark_path(@category), class: "btn btn-success" %>

<ul>
  <% @category.bookmarks.each do |bookmark| %>
    <li>
      <%= bookmark.recipe.name %>
      <%= bookmark.recipe.description %>
      <%= link_to "Delete Recipe", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %>
    </li>
  <% end %>
</ul>
<%= link_to "Back to Categories", categories_path, class: "btn btn-secondary" %>
