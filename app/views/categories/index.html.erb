<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://plus.unsplash.com/premium_photo-1681401569921-e3e99499bfe9?q=80&w=3870&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
  <div class="container">
    <h1>Cook Book</h1>
    <p>Save your favourite recipes</p>
  </div>
</div>
<div class="container">
  <div class="d-flex justify-content-between mt-4">
    <h3>List of categories</h3>
    <%= link_to "New Category", new_category_path, class: "btn btn-warning" %>
  </div>

  <div class="cards-container">
    <% @categories.each do |category| %>

      <%= link_to category_path(category) do %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://plus.unsplash.com/premium_photo-1681401569921-e3e99499bfe9?q=80&w=3870&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
          <div>
            <h4><%= category.name %></h4>
            <p><%= category.bookmarks.count %> Recipes</p>
          </div>
        </div>
      <% end %>

    <% end %>
  </div>
</div>

<div>
</div>
